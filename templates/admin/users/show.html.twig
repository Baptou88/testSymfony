{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container">
        <h1>Users</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('users_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-primary">edit</a>

        {{ include('admin/users/_delete_form.html.twig') }}
    </div>
{% endblock %}
