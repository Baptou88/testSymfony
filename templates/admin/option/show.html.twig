{% extends 'base.html.twig' %}

{% block title %}Option{% endblock %}

{% block body %}
   <div class="container">
       <h1>Option</h1>

       <table class="table">
           <tbody>
           <tr>
               <th>Id</th>
               <td>{{ option.id }}</td>
           </tr>
           <tr>
               <th>Name</th>
               <td>{{ option.name }}</td>
           </tr>
           </tbody>
       </table>

       <a href="{{ path('admin/option_index') }}">back to list</a>

       <a href="{{ path('admin/option_edit', {'id': option.id}) }}">edit</a>

       {{ include('admin/option/_delete_form.html.twig') }}

       <table class="table table-striped">
           <thead>
           <th>id</th>

           <th>Project</th>
           <th></th>
           </thead>

           <tbody>
           {% for project in projects %}
                <td>{{ project.id }}</td>
               <td>{{ project.code }}</td>
           {% endfor %}
           </tbody>
       </table>
   </div>
{% endblock %}
