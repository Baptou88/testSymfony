<div class="container border">
    {{ month.toString }}
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Jour</td>
            {% for i in 1..(month.lastDay.format('d')) %}
            <th>{{ i }}</th>
            {% endfor %}
        </tr>

    </thead>
    <tbody>
    {% for j in 0..0 %}
        <tr>
            <td>{{ j }}</td>
            {% for i in 1..(month.lastDay.format('d')) %}
                <td>

                {% if (month.getYear ~ "-"~ month.getMonth ~"-"~i)|date("Y-m-d") in heureprojects|keys %}
                    {% for record in heureprojects[(month.getYear ~ "-"~ month.getMonth ~"-"~i)|date("Y-m-d")] %}

                      <a href="{{ path('heure_projet_show',{'id': record.id}) }}">{{ record.id }}</a>
                    {% endfor %}
                {% else %}

                {% endif %}
                </td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>


</table>

