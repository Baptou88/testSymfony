{% extends "base.html.twig" %}

{% block body %}
    <div class="container border">
        <h1>bienvenu sur la home page</h1>
    </div>
    <div class="container">
        <h2>Derniers Projets</h2>
    </div>
    {# <pre>
        {{ dump(projects) }}
    </pre> #}
    <div class="container ">
        <div class="row">
            {% for projet in projects %}
        <div class="col">
            <div class="card border p-3" >
                <h5 class="card-title" >
                    <a href="{{ path('Projects.show', {id: projet.id, slug: projet.slug }) }}">{{ projet.code }}</a>
                </h5>
                <p class="card-text">
                    {{ projet.type }}
                </p>
            </div>
        </div>
        {% endfor %}

        </div>
        
    </div>
{% endblock %}
