{% extends 'base.html.twig' %}

{% block title %}Employes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Employes</h1>

        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employe.Name }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ employe.Prenom }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ employe.CreatedAt ? employe.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ employe.ModifiedAt ? employe.ModifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('employes_index') }}">back to list</a>

        <a class="btn btn-secondary" href="{{ path('employes_edit', {'id': employe.id}) }}">edit</a>

        {{ include('employes/_delete_form.html.twig') }}

    </div>
    <div class="container">
        {{ include('TableauMois/_tableaumois.html.twig') }}
    </div>

    {{ include('TableauMois/_tableaumois2.html.twig') }}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('TableauMois') }}
{% endblock %}
