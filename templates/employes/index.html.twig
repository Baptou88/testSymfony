{% extends 'base.html.twig' %}

{% block title %}Employes index{% endblock %}

{% block body %}
   <div class="container">
       <h1>Employes index</h1>

       <table class="table table-striped">
           <thead>
           <tr>
               <th>Id</th>
               <th>Name</th>
               <th>Prenom</th>
               <th>CreatedAt</th>
               <th>ModifiedAt</th>
               <th>actions</th>
           </tr>
           </thead>
           <tbody>
           {% for employe in employes %}
               <tr>
                   <td>{{ employe.id }}</td>
                   <td>{{ employe.Name }}</td>
                   <td>{{ employe.Prenom }}</td>
                   <td>{{ employe.CreatedAt ? employe.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                   <td>{{ employe.ModifiedAt ? employe.ModifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                   <td>
                       <a class="btn btn-primary" href="{{ path('employes_show', {'id': employe.id}) }}">show</a>
                       <a class="btn btn-secondary" href="{{ path('employes_edit', {'id': employe.id}) }}">edit</a>
                   </td>
               </tr>
           {% else %}
               <tr>
                   <td colspan="6">no records found</td>
               </tr>
           {% endfor %}
           </tbody>
       </table>

       <a class="btn btn-success" href="{{ path('employes_new') }}">Create new</a>
   </div>
{% endblock %}
