{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}

<div class="container">
        <h1>Clients index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>
                    <a href="{{ path('clients_show', {'id': client.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('clients_edit', {'id': client.id}) }}" class="btn btn-secondary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
</table>

    <a href="{{ path('clients_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
