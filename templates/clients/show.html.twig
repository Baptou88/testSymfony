{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="container">

        <h1>Clients</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('clients_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('clients_edit', {'id': client.id}) }}" class="btn btn-secondary">edit</a>

        {{ include('clients/_delete_form.html.twig') }}

        <table class="table border">
            <thead>
            <tr>
            <td>Action</td>
            <td>Code</td>
            <td>Type</td>
            </tr>
            </thead>
            {% for project in projects %}
                <tr>
                    <td><a href="{{ path('Projects.show',{id: project.id,slug: project.getslug}) }}" class="btn btn-primary btn-sm">{{ project.id }}</a></td>
                    <td >{{ project.code }}</td>
                 <td>{{ project.type}}</td>
                </tr>
                {% else %}
                <tr><td colspan="2">No Project</td></tr>
            {% endfor %}
        </table>
        <h2>Projetcs via $clients->getProjects</h2>
        <table class="table border">
            <thead>
            <tr>
            <td>Action</td>
            <td>Code</td>
            <td>Type</td>
            </tr>
            </thead>
            {% for project in getprojects %}

                <tr>
                    <td><a href="{{ path('Projects.show',{id: project.id,slug: project.getslug}) }}" class="btn btn-primary btn-sm">{{ project.id }}</a></td>
                    <td >{{ project.code }}</td>
                    <td>{{ project.getTypeprojet.name ?? "null" }}</td>
                </tr>
            {% else %}
                <tr><td colspan="2">No Project</td></tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}
